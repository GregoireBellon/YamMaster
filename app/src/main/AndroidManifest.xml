<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yatzy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_enervee"
        android:label="Yatzy!"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".EcranEdition"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Options"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".PopOptions"
            android:theme="@style/AppTheme.PopOptions"
            android:screenOrientation="portrait"
        ></activity>

        <activity android:name=".PopDes"
            android:theme="@style/AppTheme.PopDes"
            android:screenOrientation="portrait"
            ></activity>

        <activity
            android:name=".MenuJouer"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EcranAccueil"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EcranJeu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>