<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutJeu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondJeu"
    tools:context=".EcranJeu">

    <ImageView
        android:id="@+id/plateau"
        android:layout_width="427dp"
        android:layout_height="447dp"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        app:srcCompat="@drawable/plateau_jeu_yammaster" />

    <ImageButton
        android:id="@+id/gobelet"
        android:layout_width="102dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gobelet_orange" />

    <TextView
        android:id="@+id/textView"
        style="@style/OmbreSurTexte"
        android:layout_width="176dp"
        android:layout_height="47dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="24dp"
        android:text="J1"
        android:textAlignment="center"
        android:textColor="@color/blanc"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gobelet"
        app:layout_constraintStart_toEndOf="@+id/boutonMenu"
        app:layout_constraintTop_toBottomOf="@+id/texteIndicTourJoueur" />

    <TextView
        android:id="@+id/texteIndicTourJoueur"
        android:layout_width="157dp"
        android:layout_height="31dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/texteTourJoueur"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gobelet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/containerDes"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texteIndicTourJoueur"
        app:srcCompat="@drawable/reserve_des_fond" />

    <ImageView
        android:id="@+id/lancerRestant3"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lancerRestant2"
        app:srcCompat="@drawable/progression_nblancers_jaune" />

    <ImageView
        android:id="@+id/lancerRestant1"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lancerRestant2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/progression_nblancers_jaune" />

    <ImageView
        android:id="@+id/lancerRestant2"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lancerRestant3"
        app:layout_constraintStart_toEndOf="@+id/lancerRestant1"
        app:srcCompat="@drawable/progression_nblancers_jaune" />

    <ImageButton
        android:id="@+id/boutonMenu"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bouton_menu_jaune" />

</androidx.constraintlayout.widget.ConstraintLayout>