	{
		plateau=new Plateau();
	}
	
	
	public void passerTour()
	{
		
	}
	
	public void finPartie()
	{
		
	}
	
	
	public void afficherPlateau()
	{
		int k=0;
		for(int i=0; i<5;i++)
		{
			k++;
			
				System.out.print(plateau.CASES[i+k].getCombinaison()+ " ");
			
			System.out.println();
		}
	}
