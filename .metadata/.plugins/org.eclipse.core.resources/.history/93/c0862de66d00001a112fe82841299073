	public int getScore() {
		return score;
	}

	public void setScore(int score) {
		this.score = score;
	}

	public int getNbLancer() {
		return nbLancer;
	}

	public void setNbLancer(int nbLancer) {
		this.nbLancer = nbLancer;
	}
