import java.util.Random;

public class De {

	private int[] faces;
	
	
	public De()
	{
		faces= new int[6];
		faces[0]=1;
		faces[1]=2;
		faces[2]=3;
		faces[3]=4;
		faces[4]=5;
		faces[5]=6;
		
	}
	
	/**
	 * renvoie une face aléatoire du dé
	 * @return
	 */
	public int rouler()
	{
		int random = (int) (Math.random() * 5 + 1);
		System.out.println(random);
		
		return faces[random];
	}
	
	
	
}
